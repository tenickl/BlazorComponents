@page "/PieChart"
@using BlazorComponents.Shared


<h2>Chart JS charts using Blazor</h2>
<div class="row">
    <button class="btn btn-primary" onclick="@UpdateChart">Update Chart </button>
</div>
<ChartJsPieChart ref="pieChartJs" Chart="@blazorPieChartJS" Width="600" Height="300" />

@functions{

    public ChartJSChart<ChartJSPieDataset> blazorPieChartJS { get; set; } = new ChartJSChart<ChartJSPieDataset>();
    ChartJsPieChart pieChartJs;

    protected override void OnInit()
    {

        blazorPieChartJS = new ChartJSChart<ChartJSPieDataset>()
        {
            ChartType = "pie",
            CanvasId = "myFirstPieChart",
            Options = new ChartJsOptions()
            {
                Text = "Sample chart from Blazor",
                Display = true,
                Responsive = false
            },
            Data = new ChartJsData<ChartJSPieDataset>()
            {
                Labels = new List<string>() { "Red", "Blue", "Yellow", "Green", "Purple", "Orange" },
                Datasets = new List<ChartJSPieDataset>()
                 {
                        new ChartJSPieDataset()
                        {
                            BackgroundColor = "['rgba(255, 99, 132, 0.2)','rgba(54, 162, 235, 0.2)','rgba(255, 206, 86, 0.2)','rgba(75, 192, 192, 0.2)','rgba(153, 102, 255, 0.2)','rgba(255, 159, 64, 0.2)']",
                            BorderColor = "#ff6384",
                            Label = "# of Votes from blazor",
                            Data = new List<int>{ 19,12,5,3,3,2},
                        }
                 }
            }
        };
    }

    public void UpdateChart()
    {
        //Update existing dataset
        blazorPieChartJS.Data.Labels.Add($"New{DateTime.Now.Second}");
        var firstDataSet = blazorPieChartJS.Data.Datasets[0];
        firstDataSet.Data.Add(DateTime.Now.Second);

        //Add new dataset
        //blazorLineChartJS.Data.Datasets.Add(new ChartJsLineDataset()
        //{
        //    BackgroundColor = "#cc65fe",
        //    BorderColor = "#cc65fe",
        //    Label = "# of Votes from blazor 1",
        //    Data = new List<int> {20,21,12,3,4,4},
        //    Fill = true,
        //    BorderWidth = 2,
        //    PointRadius = 3,
        //    PointBorderWidth = 1
        //});

        pieChartJs.UpdateChart(blazorPieChartJS);
    }
}